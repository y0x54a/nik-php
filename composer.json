{
  "name": "y0x54a/nik-php",
  "description": "y0x54a/nik-php",
  "type": "library",
  "license": "Apache-2.0",
  "require": {
    "php": ">=7.2.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5 || ^9.3"
  },
  "autoload": {
    "psr-4": {
      "Y0x54a\\Nik\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Y0x54aTest\\Nik\\": "test/src"
    }
  },
  "scripts": {
    "test": "phpunit -c test/phpunit.config.xml",
    "coverage": "phpunit --coverage-text --coverage-clover=build/coverage/coverage-clover.xml -c test/phpunit.config.xml"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}